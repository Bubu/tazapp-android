<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SettingsLayout">
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SettingsLayout.SpecialWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SettingsGeneral">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@drawable/settings_textcolor</item>
    </style>

    <style name="SettingsHeadline" parent="SettingsGeneral">
        <item name="android:textColor">@color/settings_header_text_color</item>
    </style>

    <style name="SettingsNote" parent="SettingsGeneral">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/settings_note_text_color</item>
    </style>


    <style name="SettingsItem" parent="SettingsGeneral">
        <item name="android:paddingTop">10dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SettingsCheckbox" parent="SettingsItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="SettingsClickFrameCompat" parent="SettingsItem">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsClickFrame" parent="SettingsClickFrameCompat">
        <item name="android:clickable">true</item>
    </style>
    <style name="SettingsClickFrame.Title">
        <item name="android:paddingTop">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>
    <style name="SettingsClickFrame.Value">
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SettingsRadioButtonFrame" parent="SettingsItem">

    </style>
    <style name="SettingsRadioButtonFrame.Title">
        <item name="android:paddingTop">5dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="SettingsRadioButtonFrame.Group">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="SettingsRadioButtonFrame.Value">
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsEdit">
        <item name="android:textColor">@drawable/settings_edittext_textcolor</item>
    </style>


    <style name="ImportLayout">
        <item name="android:padding">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ImportLayout.SpecialWidth">
        <item name="android:layout_width">match_parent</item>
    </style>





    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@color/settings_divider</item>
    </style>

</resources>