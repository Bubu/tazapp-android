<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="reader_index_drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">-48dp</item>
    </style>

    <style name="TextIndex">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextIndexSource" parent="@style/TextIndex">
        <item name="android:textColor">@color/index_text_source</item>
    </style>

    <style name="TextIndexCategory" parent="@style/TextIndex">
        <item name="android:textColor">@color/index_text_category</item>
    </style>

    <style name="TextIndexPage" parent="@style/TextIndex">
        <item name="android:textColor">@color/index_text_page</item>
    </style>

    <style name="TextIndexArticle" parent="@style/TextIndex">
        <item name="android:textColor">@color/index_text_article</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextIndexArticleSub" parent="@style/TextIndexArticle"></style>

    <style name="TextIndexToplink" parent="@style/TextIndex">
        <item name="android:textColor">@color/index_text_toplink</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextPageIndexSource" parent="@style/TextIndexSource"></style>

    <style name="LayoutIndex">
        <item name="android:minHeight">@dimen/index_min_height</item>
    </style>

    <style name="LayoutIndexSource" parent="@style/LayoutIndex">
        <item name="android:background">@color/index_background_source</item>
    </style>

    <style name="LayoutIndexCategory" parent="@style/LayoutIndex">
        <item name="android:background">@color/index_background_category</item>
    </style>

    <style name="LayoutIndexPage" parent="@style/LayoutIndex">
        <item name="android:background">@color/index_background_page</item>
    </style>

    <style name="LayoutIndexArticle" parent="@style/LayoutIndex">
        <item name="android:background">@color/index_background_article</item>
    </style>

    <style name="LayoutIndexToplink" parent="@style/LayoutIndex">
        <item name="android:background">@color/index_background_toplink</item>
    </style>

    <style name="LayoutPageIndexSource" parent="@style/LayoutIndexSource"></style>

    <style name="SettingsTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="SettingsWidget">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>



</resources>